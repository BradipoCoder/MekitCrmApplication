{#
	VIEW LINK TO SPECIFIC EVENT
	The 'config_route_key' context parameter must be defined, like:
		...
		type:           twig
        frontend_type:  html
        template:       MekitEventBundle:Event:Datagrid/Property/eventLink.html.twig
        context:
            config_route_key:     viewRouteName

    Available keys are: viewRouteName, editRouteName

    Please check in MekitEventBundle/Resources/config/entity_config.yml
#}
{% if config_route_key is defined %}
	{% set routeName = mkt_ev_type_spec_link(record.getValue('type'), config_route_key) %}
	{% set linkUri = path(routeName, {'id': record.getValue('linkRefId') }) %}
	<a href="{{ linkUri }}">{{ record.getValue('name') }}</a>
{% else %}
	{{ record.getValue('name') }}
{% endif %}
