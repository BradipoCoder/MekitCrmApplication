{% extends 'OroUIBundle:actions:update.html.twig' %}

{% form_theme form with ['OroFormBundle:Form:fields.html.twig', 'OroTagBundle:Form:fields.html.twig'] %}

{% set fullname = entity.name|default('N/A'|trans) %}
{% oro_title_set({ params : {"%event.name%": fullname} }) %}

{% set formAction = form.vars.value.id ? path('mekit_call_update', { 'id': form.vars.value.id }) : path('mekit_call_create')  %}
{% set cancelAction = form.vars.value.id ? path('mekit_call_view', { 'id': form.vars.value.id }) : path('mekit_call_index') %}

{% block head_script %}
    {{ parent() }}
    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {{ UI.cancelButton(cancelAction) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('mekit_call_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('mekit_call_index'),
            'indexLabel': 'mekit.call.entity_plural_label'|trans,
            'entityTitle': fullname
        }
        %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'mekit.call.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'call-profile' %}

    {% set dataBlocks = [
        {
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'title': 'mekit.call.widgets.call_information'|trans,
                    'data': [
                        form_row(form.name),
                        form_row(form.event.description),
					    form_row(form.event.state),
					    form_row(form.event.priority),
                        form_row(form.direction),
                        form_row(form.outcome),

                    ]
                },
                {
                    'title': 'mekit.event.widgets.event_information'|trans,
                    'data': [
                        form_row(form.event.startDate),
                        form_row(form.event.state),
                        form_row(form.event.priority),
                        form_row(form.event.endDate),
                        form_row(form.event.duration),
                        form_row(form.event.owner),
                        form_row(form.event.type),
                    ]
                }
            ]
        },
	    {
		    'title': 'mekit.call.widgets.call_references'|trans,
		    'class': 'resp',
	        'subblocks': [
		        {
	                'data': [
	                    form_row(form.users),
                        form_row(form.accounts),
                        form_row(form.contacts),
					    form_row(form.tasks),
					    form_row(form.meetings),
                        form_row(form.projects),
	                ]
	            },
	        ]
	    }
    ] %}

    {% if form.additional is defined and form.additional.children|length > 0 %}
        {% set additionalData = [] %}
        {% for value in form.additional %}
            {% set additionalData = additionalData|merge([form_row(value)]) %}
        {% endfor %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional Information'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }] ) %}
    {% endif %}



    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
