{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%account.name%": entity.name|default('N/A')} }) %}

{% block navButtons %}
	{% if resource_granted('EDIT', entity) %}
		{{ UI.editButton({
		'path': path('mekit_account_update', {'id': entity.id}),
		'entity_label': 'mekit.account.entity_label'|trans
		}) }}
	{% endif %}

	{% if resource_granted('DELETE', entity) %}
		{{ UI.deleteButton({
		'dataUrl': path('mekit_api_delete_account', {'id': entity.id}),
		'dataRedirect': path('mekit_account_index'),
		'aCss': 'no-hash remove-button',
		'dataId': entity.id,
		'id': 'btn-remove-account',
		'entity_label': 'mekit.account.entity_label'|trans
		}) }}
	{% endif %}

{% endblock navButtons %}

{% block pageHeader %}
	{% set breadcrumbs = {
	'entity': entity,
	'indexPath': path('mekit_account_index'),
	'indexLabel': 'mekit.account.entity_plural_label'|trans,
	'entityTitle': entity.name|default('N/A')
	} %}
	{{ parent() }}
{% endblock pageHeader %}


{% block content_data %}
	{% set accountInformationWidget %}
		{{ oro_widget_render({
		'widgetType': 'block',
		'title': 'mekit.account.widgets.account_information'|trans,
		'url': path('mekit_account_widget_info', {id: entity.id})
		}) }}
	{% endset %}

	{% set addressBookWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'contentClasses': [],
            'title': 'mekit.account.widgets.account_addresses'|trans,
            'url': path('mekit_account_address_book', {id: entity.id})
        }) }}
    {% endset %}

	{% set accountContactsWidget %}
		{{ oro_widget_render({
			'widgetType': 'block',
			'title': 'mekit.account.widgets.account_contacts'|trans,
			'url': path('mekit_account_widget_listcontacts', {id: entity.id})
		}) }}
	{% endset %}


	{% set relationship_accounts %}
	{{ oro_widget_render({
		'widgetType': 'block',
		'title': 'R-Accounts',
		'url': path('mekit_relationship_widget_list', {id: entity.referenceableElement.id, datagrid_name: 'relationship-related-accounts'})
	}) }}
	{% endset %}

	{% set relationship_contacts %}
	{{ oro_widget_render({
		'widgetType': 'block',
		'title': 'R-Contacts',
		'url': path('mekit_relationship_widget_list', {id: entity.referenceableElement.id, datagrid_name: 'relationship-related-contacts'})
	}) }}
	{% endset %}



	{% set dataBlocks = [
		{
		'title': 'mekit.account.sections.general'|trans,
		'class': 'active',
		'subblocks': [ {'data' : [accountInformationWidget]} ]
		},
		{
		'title': 'Relationships',
		'subblocks': [ {'data' : [relationship_accounts, relationship_contacts]} ]
		},
		{
		'title': 'mekit.account.sections.contacts'|trans,
		'subblocks': [ {'data' : [accountContactsWidget]} ]
		},
		{
		'title': 'mekit.account.sections.addresses'|trans,
		'subblocks': [ {'data' : [addressBookWidget]} ]
		},
	] %}

	{% set id = 'accountView' %}
	{% set data = {'dataBlocks': dataBlocks} %}

	{{ parent() }}
{% endblock content_data %}
