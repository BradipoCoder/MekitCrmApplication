{% extends 'OroUIBundle:actions:update.html.twig' %}

{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}

{% oro_title_set({params : {"%domain.name%": form.vars.value.name|default('N/A')} }) %}

{% set formAction = form.vars.value.id ? path('mekit_domain_update', { 'id': form.vars.value.id }) : path('mekit_domain_create')  %}
{% set cancelAction = form.vars.value.id ? path('mekit_domain_view', { 'id': form.vars.value.id }) : path('mekit_domain_index') %}

{#{% block head_script %}#}
    {#{{ parent() }}#}
    {#{% block stylesheets %}#}
        {#{{ form_stylesheet(form) }}#}
    {#{% endblock %}#}
{#{% endblock %}#}

{% block navButtons %}
    {{ UI.cancelButton(cancelAction) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('mekit_domain_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('mekit_domain_index'),
            'indexLabel': 'mekit.domain.entity_plural_label'|trans,
            'entityTitle': form.vars.value.name|default('N/A')
        }
        %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'mekit.domain.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'domain-profile' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': 'mekit.domain.widgets.domain_information'|trans,
                'data': [
                    form_row(form.name),
                    form_row(form.description),
                    form_row(form.provider),
				    form_row(form.expiration),
                ]
            }
        ]
    },
    {
        'title': 'mekit.relationship.widgets.relationships'|trans,
        'class': 'resp',
        'subblocks': [
            {
                'title': 'mekit.relationship.widgets.relationships'|trans,
                'data': [
                            form_widget(form.referenceableElement),
                        ]
            },
        ]
    }
    ] %}

    {% if form.additional is defined and form.additional.children|length > 0 %}
        {% set additionalData = [] %}
        {% for value in form.additional %}
            {% set additionalData = additionalData|merge([form_row(value)]) %}
        {% endfor %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional Information'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }] ) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
